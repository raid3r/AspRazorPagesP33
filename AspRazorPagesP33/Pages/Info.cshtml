@page
@model AspRazorPagesP33.Pages.InfoModel
@{
    ViewData["Title"] = Model.Person.Name;
}

<div class="row mb-4">
    @foreach (var person in Model.Persons)
    {
        @if (person.Id == Model.Person.Id)
        {
            <div class="col-md-3">
                <strong style="color: red">@person.Name</strong>
            </div>
        }
        else
        {
            <div class="col-md-3">
                <a asp-page="/Info" asp-route-id="@person.Id"
                   class="btn btn-outline-info">@person.Name</a>
            </div>
        }

    }
</div>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">

            <div class="card-header">
                <h4 class="card-title">@Model.Person.Name</h4>
            </div>
            <div class="card-body">

                <table class="table table-hover">
                    <thead></thead>
                    <tbody>
                        <tr>
                            <th>Description</th>
                            <td>@Model.Person.Description</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Model.Person.Email</td>
                        </tr>
                        <tr>
                            <th>Birthday</th>
                            <td>@Model.Person.Birthday.ToString("dd.MM.yyyy")</td>
                        </tr>
                        <tr>
                            <th>Skills</th>
                            <td>
                                @foreach (var skill in Model.Person.Skills)
                                {
                                    <div>@skill.Title</div>
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: @skill.Level%"></div>
                                    </div>
                                }
                            </td>
                        </tr>
                    </tbody>

                </table>

            </div>
            <div class="card-footer">
                <a asp-page="/Persons" class="btn btn-secondary">Return to list</a>
            </div>
        </div>
    </div>
</div>


